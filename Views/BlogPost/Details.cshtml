@model BlogApplication.Models.BlogPost

@{
    ViewData["Title"] = Model.Title;
    var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
    var currentUserId = User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    var isOwnerOrAdmin = (currentUserId != null && currentUserId == Model.AuthorId.ToString()) || (User?.IsInRole("admin") ?? false);
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8">
            <!-- Back to Home -->
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary mb-3">
                &larr; Back to Posts
            </a>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <!-- Post Content -->
            <article class="card mb-4">
                <div class="card-body">
                    <h1 class="card-title">@Model.Title</h1>

                    <!-- Category & Tags -->
                    <div class="mb-3">
                        @if (Model.Category != null)
                        {
                            <a asp-controller="Home" asp-action="Index" asp-route-categoryId="@Model.Category.Id"
                               class="badge bg-primary text-decoration-none">@Model.Category.Name</a>
                        }
                        @foreach (var tag in Model.Tags)
                        {
                            <a asp-controller="Home" asp-action="Index" asp-route-tag="@tag.Name"
                               class="badge bg-secondary text-decoration-none">@tag.Name</a>
                        }
                    </div>

                    <p class="text-muted">
                        By <strong>@Model.Author.Username</strong> on @Model.CreatedAt.ToString("MMMM dd, yyyy")
                        @if (Model.UpdatedAt > Model.CreatedAt)
                        {
                            <span>(Updated: @Model.UpdatedAt.ToString("MMM dd, yyyy"))</span>
                        }
                    </p>

                    <hr />

                    <div class="card-text" style="white-space: pre-wrap;">@Model.Content</div>

                    @if (isOwnerOrAdmin)
                    {
                        <hr />
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a>
                            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;"
                                  onsubmit="return confirm('Are you sure you want to delete this post?');">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </div>
                    }
                </div>
            </article>

            <!-- Comments Section -->
            <section class="mt-4">
                <h4>Comments (@Model.Comments.Count)</h4>
                <hr />

                <!-- Add Comment Form -->
                @if (isAuthenticated)
                {
                    <form asp-action="AddComment" method="post" class="mb-4">
                        <input type="hidden" name="postId" value="@Model.Id" />
                        <div class="mb-3">
                            <textarea name="content" class="form-control" rows="3"
                                      placeholder="Write a comment..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Post Comment</button>
                    </form>
                }
                else
                {
                    <p class="text-muted mb-4">
                        <a asp-controller="Account" asp-action="Login">Log in</a> to leave a comment.
                    </p>
                }

                <!-- Comments List -->
                @if (Model.Comments.Any())
                {
                    @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <strong>@comment.Author.Username</strong>
                                    <small class="text-muted">@comment.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                </div>
                                <p class="mt-2 mb-0">@comment.Content</p>

                                @if (isAuthenticated && (currentUserId == comment.AuthorId.ToString() || User.IsInRole("admin")))
                                {
                                    <form asp-action="DeleteComment" method="post" class="mt-2"
                                          onsubmit="return confirm('Delete this comment?');">
                                        <input type="hidden" name="commentId" value="@comment.Id" />
                                        <input type="hidden" name="postId" value="@Model.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No comments yet. Be the first to comment!</p>
                }
            </section>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">About the Author</div>
                <div class="card-body">
                    <h5>@Model.Author.Username</h5>
                    <p class="text-muted mb-0">Member since @Model.Author.CreatedAt.ToString("MMMM yyyy")</p>
                </div>
            </div>
        </div>
    </div>
</div>
