@model BlogApplication.Models.BlogPost
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Edit Post";
    var categories = ViewBag.Categories as SelectList;
    var currentTags = ViewBag.CurrentTags as string ?? "";
}

<h2>Edit Post</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="form-group mb-3">
        <label>Title</label>
        <input name="title" value="@Model.Title" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Category</label>
        <select name="categoryId" class="form-select">
            <option value="">-- Select Category (optional) --</option>
            @if (categories != null)
            {
                @foreach (var cat in categories)
                {
                    <option value="@cat.Value" selected="@(cat.Value == Model.CategoryId?.ToString())">@cat.Text</option>
                }
            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Tags</label>
        <input name="tags" class="form-control" value="@currentTags"
               placeholder="Enter tags separated by commas" />
        <small class="text-muted">Separate multiple tags with commas</small>
    </div>

    <div class="form-group mb-3">
        <label>Content</label>
        <textarea name="content" class="form-control" rows="6" required>@Model.Content</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
</form>