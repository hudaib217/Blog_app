@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Create New Post";
    var categories = ViewBag.Categories as SelectList;
}

<h2>Create New Blog Post</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label class="form-label">Title</label>
        <input name="title" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Category</label>
        <select name="categoryId" class="form-select">
            <option value="">-- Select Category (optional) --</option>
            @if (categories != null)
            {
                @foreach (var cat in categories)
                {
                    <option value="@cat.Value">@cat.Text</option>
                }
            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Tags</label>
        <input name="tags" class="form-control" placeholder="Enter tags separated by commas (e.g., tech, programming, web)" />
        <small class="text-muted">Separate multiple tags with commas</small>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Content</label>
        <textarea name="content" class="form-control" rows="6" required></textarea>
    </div>

    <button type="submit" class="btn btn-success">Publish Post</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>